<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FCFCFC"
    tools:context="com.chatengine.chatengine.SettingsActivity">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/dp"
        android:src="@drawable/profile_00"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:layout_below="@+id/dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/header1"
        android:layout_marginTop="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:id="@+id/firstname_holder"
        android:layout_marginTop="8dp"
        android:background="#FFF"
        android:layout_below="@+id/header1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter your first name"
            android:text=""
            android:layout_centerVertical="true"
            android:ems="10"
            android:textSize="22dp"
            android:id="@+id/firstname" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/edit_firstname"
            android:src="@android:drawable/ic_menu_edit"
            android:backgroundTint="#FFF"
            android:tint="@color/colorPrimary"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:background="#FFF"
        android:id="@+id/lastname_holder"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/firstname_holder" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter your last name"
            android:text=""
            android:layout_centerVertical="true"
            android:ems="10"
            android:textSize="22dp"
            android:id="@+id/lastname" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/edit_lastname"
            android:src="@android:drawable/ic_menu_edit"
            android:backgroundTint="#FFF"
            android:tint="@color/colorPrimary"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:background="#FFF"
        android:id="@+id/mobile_holder"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/lastname_holder" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter mobile number"
            android:text=""
            android:layout_centerVertical="true"
            android:ems="10"
            android:textSize="22dp"
            android:id="@+id/mobile" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/edit_mobile"
            android:src="@android:drawable/ic_menu_edit"
            android:backgroundTint="#FFF"
            android:tint="@color/colorPrimary"/>
    </RelativeLayout>


</RelativeLayout>
