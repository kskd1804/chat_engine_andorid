<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chatengine.chatengine.LoginActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/logo"
        android:textSize="110sp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to chatEngine"
        android:id="@+id/welcomeText"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:textSize="40sp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/registrationGroup"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/welcomeText"
        android:layout_marginTop="40dp">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:id="@+id/havingAccount"
        android:textSize="25sp"
        android:checked="true"
        android:layout_marginBottom="40dp"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noAccount"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:layout_below="@+id/haveAccountDesc"
        android:layout_alignLeft="@+id/havingAccount"
        android:layout_alignStart="@+id/havingAccount"
        android:layout_marginTop="20dp" />

    </RadioGroup>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignTop="@+id/registrationGroup"
        android:layout_alignLeft="@+id/welcomeText"
        android:layout_alignStart="@+id/welcomeText">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I have an account"
        android:id="@+id/haveAccountText"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Use your existing account to reach all your friends"
        android:id="@+id/haveAccountDesc"
        android:textColor="#898989"
        android:layout_below="@+id/haveAccountText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/haveAccountText"
        android:layout_alignStart="@+id/haveAccountText" />

    </RelativeLayout>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:id="@+id/continueButton"
        android:background="@color/textColor"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="I don't have an account"
        android:textSize="20sp"
        android:id="@+id/noAccountText"
        android:layout_alignBottom="@+id/registrationGroup"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Register now &amp; experience the joy of being togther!"
    android:id="@+id/noAccountDesc"
    android:textColor="#898989"
        android:layout_below="@+id/noAccountText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/noAccountText"
        android:layout_alignStart="@+id/noAccountText" />

</RelativeLayout>
