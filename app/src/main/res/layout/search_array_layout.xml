<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/search_img"
        android:layout_margin="10dp"
        android:src="@drawable/test"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kousthubha Das"
        android:layout_marginTop="3dp"
        android:id="@+id/search_name"
        android:textColor="#000"
        android:textSize="23dp"
        android:layout_alignTop="@+id/search_img"
        android:layout_toRightOf="@+id/search_img"
        android:layout_toEndOf="@+id/search_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="last seen at: 12:30 PM"
        android:textColor="#585858"
        android:id="@+id/search_status"
        android:layout_alignBottom="@+id/search_img"
        android:layout_alignLeft="@+id/search_name"
        android:layout_alignStart="@+id/search_name" />
</RelativeLayout>